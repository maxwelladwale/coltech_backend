APP_NAME="COLTECH API"
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Africa/Nairobi

# Frontend URL for CORS
FRONTEND_URL=http://localhost:3000

APP_LOCALE=en
